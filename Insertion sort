#include<iostream>
using namespace std;

class insertion
{
	public:
		int size,*p;
		void get()
		{
			cout<<"Enter the size of Array ";
			cin>>size;
			p=new int[size];
			cout<<"Enter the elements ";
			for(int i=0;i<size;i++)
			{
				cin>>p[i];
				
			}
			cout<<"Unsorted array "<<endl;
			for(int i=0;i<size;i++)
			{
				cout<<p[i]<<"\t";
			}
			for(int i=1;i<size;i++){
				int key=p[i];
				int j=i-1;
				while(p[j]>=key && j>=0)
				{
					
					p[j+1]=p[j];
					j--;         // To break while loop
				}
				int temp=p[j+1];
				p[j+1]=key;
				key=temp;
				}
				cout<<endl<<"sorted array "<<endl;
			for(int i=0;i<size;i++)
			{
				cout<<p[i]<<"\t";
					}
			}
			
};

int main()
	{
		insertion i;
		i.get();
	}
